extends layout 

block content 
    style.
        body{
            display = flex;
        }
        section.image {flex=1;}
        section.discript {flex:3;}
    section.image
        img(src=`${BOOK.image}`, width="200px")
    section.discript
        div
            strong isbn
            span= BOOK.isbn
        div
            strong 도서명
            span= BOOK.title
        div
            strong 네이버 쇼핑
            span= BOOK.link
        div 
            strong 출판사
            span= BOOK.publisher
        div
            strong 저자
            span= BOOK.author
        div
            strong 할인가
            span= BOOK.discount
        div
            strong 출판일
            span= BOOK.pubdate
        div
            strong 설명
            span= BOOK.description
